<html>
	<head>
		<link rel="stylesheet" type="text/css" href="bootstrap.min.css">
		<style>
			body { background-color: rgba(0,0,0,0.3); }

		    .modal-content {
		    	width: 900px;
		    	max-width: 85%;
				
				padding: 30px;
				margin: 30px auto;

				background-color: #ECF3FA;
		    }

		    .modal-body > .row {
		    	background-color: #fff;
		    }
		</style>
	</head>
<body>

<div id="modal">
	<div class="modal-content">
		<button id="close-popup"type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		<div class="modal-header">
			<h2>Hey... Wait...</h2>
		</div>
		<div class="modal-body">
			<div class="row">
			{{#sites}}
				<div class="col-cs-12 col-sm-6 partner-container">			
					<h3>{{hostname}}</h3>
					<p>{{catchPhrase}}</p>
				</div>
			{{/sites}}
			</div>	
		</div>
		<div class="modal-footer"></div>	
	</div>
</div>

<script>
	document.getElementById('close-popup').onclick = function(e) { window.detroyIframe(); };
</script>
</body>
</html>
